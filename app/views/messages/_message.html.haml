.Main__main__name
  = message.user.name
  .date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.Main__main__message
  - if message.content.present?
    %p.Main__main__message__content
      = message.content
  = image_tag message.image.url, class: 'Main__main_message__image' if message.image.present?